<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ec7966" />
            <gradient android:angle="-90" android:startColor="#3d4ed2" android:endColor="#533bc7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#f9738e" />
            <solid android:color="#d29881"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#e7776d" />
            <gradient android:angle="-90" android:startColor="#ec5140" android:endColor="#e7585a" />
        </shape>
    </item>
</selector>